    <template title="bdreputation_injector" version_id="1" version_string="0.9"><![CDATA[<xen:comment>
Because of the lack of hooks at good places, 
this small snippet of javascript will be used to 
inject all the needed html into posts...
</xen:comment>

<xen:require js="js/bdReputation/frontend.js" />
<xen:require css="bdreputation.css" />

<div class="ReputationInjector" style="display: none">
	<div class="CallForAction">
		<xen:include template="bdreputation_call_for_action">
			<xen:set var="$postId">{$placeholder.postId}</xen:set>
		</xen:include>
	</div>
	
	<div class="DisplayOnly">
		<xen:include template="bdreputation_display_only">
			<xen:set var="$postId">{$placeholder.postId}</xen:set>
		</xen:include>
	</div>
</div>

<script type="text/javascript">
var ReputationInjectorConfiguration = {
	'data': {xen:helper json, {$ReputationInjectorData}},
	'placeholder': {xen:helper json, {$placeholder}}
};
</script>]]></template>
    <template title="bdreputation_member_reputation" version_id="1" version_string="0.9"><![CDATA[<xen:title>{xen:phrase bdreputation_given_reputation_records}: {$user.username}</xen:title>

<xen:navigation>
	<xen:breadcrumb href="{xen:link full:members, $user}">{$user.username}</xen:breadcrumb>
</xen:navigation>

<div class="section">
	<xen:if is="{$records}">
		<ol class="overlayScroll">
			<xen:foreach loop="$records" value="$record">
				<li class="primaryContent">
					<xen:include template="bdreputation_single" />
				</li>
			</xen:foreach>
		</ol>

		<xen:pagenav link="members/reputation" linkdata="{$user}"
			page="{$page}" perpage="{$recordsPerPage}" total="{$totalRecords}"
		/>

		<div class="sectionFooter opposedOptions overlayOnly">
			<div class="right">
				<input type="button" class="button primary OverlayCloser" value="{xen:phrase close}" />
			</div>
		</div>
	<xen:else />
		<div class="primaryContent">{xen:phrase bdreputation_no_reputation_records, 'name={$user.username}'}</div>
		<div class="sectionFooter overlayOnly ">
			<input type="button" class="button primary OverlayCloser" value="{xen:phrase close}" />
		</div>
	</xen:if>
</div>]]></template>
